
extends ../layouts/base.pug
include ../mixins/filter-scroll.pug
include ../mixins/confirmation
include ../components/operation-result

block content
  include ../components/header-profile
  .bg-success.bg-success--operation-success
    .operation-wrap
      picture.banner-bg
        source(
          type="image/avif"
          media="(max-width: 767px)"
          srcset=`./images/banners/bg-mobile-success-320.avif 320w,
                  ./images/banners/bg-mobile-success-640.avif 640w,
                  ./images/banners/bg-mobile-success-960.avif 960w`
          sizes="100vw"
        )
        source(
          type="image/avif"
          media="(min-width: 768px)"
          srcset=`./images/banners/bg-success-960.avif 960w,
                  ./images/banners/bg-success-1440.avif 1440w,
                  ./images/banners/bg-success-1920.avif 1920w`
          sizes="100vw"
        )
        source(
          type="image/webp"
          media="(max-width: 767px)"
          srcset=`./images/banners/bg-mobile-success-320.webp 320w,
                  ./images/banners/bg-mobile-success-640.webp 640w,
                  ./images/banners/bg-mobile-success-960.webp 960w`
          sizes="100vw"
        )
        source(
          type="image/webp"
          media="(min-width: 768px)"
          srcset=`./images/banners/bg-success-960.webp 960w,
                  ./images/banners/bg-success-1440.webp 1440w,
                  ./images/banners/bg-success-1920.webp 1920w`
          sizes="100vw"
        )
        source(
          type="image/jpg"
          media="(max-width: 767px)"
          srcset=`./images/banners/bg-mobile-success-320.jpg 320w,
                  ./images/banners/bg-mobile-success-640.jpg 640w,
                  ./images/banners/bg-mobile-success-960.jpg 960w`
          sizes="100vw"
        )
        source(
          type="image/jpg"
          media="(min-width: 768px)"
          srcset=`./images/banners/bg-success-960.jpg 960w,
                  ./images/banners/bg-success-1440.jpg 1440w,
                  ./images/banners/bg-success-1920.jpg 1920w`
          sizes="100vw"
        )
        img.banner-bg__img(
          src="./images/banners/bg-mobile-success-320.jpg"
          alt=""
          aria-hidden="true"
        )
      
      .container
        +operationResult('success')
      