                        p Данная почта не будет использована при регистрации ChatGPT, мы используем её для отправки данных от аккаунта.
                        
                        .input.input--icon.input--basic.default
                          .input__field
                            +icon('envelope', {width: 24, height: 24})
                            input(type="email" placeholder="Email (Логин)" name="email" autocomplete="off")
                        
                      .tabs__panel.called-js(data-name="by-login")
                        h4.title.title--sm Укажите логин и пароль
                        
                        form.form
                          .input.input--basic.default
                            .input__field
                              label.input__label(for="login") Логин
                              input#login(type="text" name="login")
                          
                          .input.input--basic.default
                            .input__field
                              label.input__label(for="password") Пароль
                              input#password(type="password" name="passwordr")
                          
                          
                      .tabs__panel.called-js(data-name="by-link") 
                        h4.title.title--sm Укажите ссылку для оплаты
                        form.form
                          .input.input--basic.default
                            .input__field
                              label.input__label(for="link") Ссылка
                              input#link(type="text" name="link")

                  button.btn.btn--primary.btn--w100(type='submit').trigger-js(data-name="authorization" data-move=".desktop-info.product-wrap__inner,768") Купить 1 497 RUB
                             
                          
                          
        .flex-layout__item
          .product-wrap
