header.header
  .container
    .header__flex-container
      .header__flex-elem
        include ../components/logo.pug
      .header__flex-elem.header__flex-elem--control-wrap
        
        .avatar.trigger-js(data-name="popup-profile")
          picture
          
            source(
              type="image/avif"
              srcset=`./images/avatars/avatar-36.avif 36w,
                      ./images/avatars/avatar-72.avif 72w,
                      ./images/avatars/avatar-108.avif 108w,
                      ./images/avatars/avatar-63.avif 63w,
                      ./images/avatars/avatar-128.avif 128w,
                      ./images/avatars/avatar-189.avif 189w,
                      ./images/avatars/avatar-80.avif 80w,
                      ./images/avatars/avatar-160.avif 160w,
                      ./images/avatars/avatar-240.avif 240w`
              sizes="36px"
            )
            
            source(
              type="image/webp"
              srcset=`./images/avatars/avatar-36.webp 36w,
                      ./images/avatars/avatar-72.webp 72w,
                      ./images/avatars/avatar-108.webp 108w,
                      ./images/avatars/avatar-63.webp 63w,
                      ./images/avatars/avatar-128.webp 128w,
                      ./images/avatars/avatar-189.webp 189w,
                      ./images/avatars/avatar-80.webp 80w,
                      ./images/avatars/avatar-160.webp 160w,
                      ./images/avatars/avatar-240.webp 240w`
              sizes="36px"
            )
            
            img(
              src=`./images/avatars/avatar-63.jpg`
              srcset=`./images/avatars/avatar-36.jpg 36w,
                      ./images/avatars/avatar-72.jpg 72w,
                      ./images/avatars/avatar-108.jpg 108w,
                      ./images/avatars/avatar-63.jpg 63w,
                      ./images/avatars/avatar-128.jpg 128w,
                      ./images/avatars/avatar-189.jpg 189w,
                      ./images/avatars/avatar-80.jpg 80w,
                      ./images/avatars/avatar-160.jpg 160w,
                      ./images/avatars/avatar-240.jpg 240w`
              sizes="36px"
              width="36"
              height="36"
              alt="Аватар"
              loading="lazy"
              decoding="async"
            )


        include ../components/popup-profile

      include ../components/menu 
      
      
      